{
  "manifest_version": 3,
  "name": "Codopium",
  "version": "1.0",
  "description": "Codopium - take the power over the Web, add your custom features and style to any website",
  "author": "Kanasero",
  "action": {
    "default_title": "Codopium - manage your custom code for websites",
    "default_popup": "index.html#/popup",
    "default_icon": "icons/app/icon16.png"
  },
  "options_page": "index.html#/options",
  "permissions": [ "storage", "tabs", "unlimitedStorage", "userScripts" ],
  "host_permissions": [ "*://*/*" ],
  "minimum_chrome_version": "120",
  "icons": {
    "16": "icons/app/icon16.png",
    "32": "icons/app/icon32.png",
    "48": "icons/app/icon48.png",
    "128": "icons/app/icon128.png"
  }
}
